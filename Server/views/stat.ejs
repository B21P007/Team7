<%#
  Team7 client ejs - stat | Update: 2021/06/21
%>

<%- include( './_header.ejs' ); %>

<head>
  <link rel="preload" href="/public/css/style_stat.css" as="style">
  <link rel="stylesheet" href="/public/css/style_stat.css"">
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js"
    integrity="sha512-FJ2OYvUIXUqCcPf1stu+oTBlhn54W0UisZB/TNrZaVMHHhYvLBV9jMbvJYtvDe5x/WVaoXZ6KB+Uqe5hT2vlyA=="
    crossorigin="anonymous" referrerpolicy="no-referrer">
  </script>
  <title><%- title %></title>
</head>

<body>
  <script type='text/javascript'>
    window.onload = function () {
      var data = < % -JSON.stringify(lecture_graph_val) % > ;
      var stage = document.getElementById('stage');
      var chart = new CanvasJS.Chart(stage, {
        title: {
          text: ""
        },
        theme: "light1",
        data: [{
          type: 'line',
          dataPoints: data
        }]
      });
      chart.render();

      var stage2 = document.getElementById('stage2');
      var chart2 = new CanvasJS.Chart(stage2, {
        title: {
          text: ""
        },
        theme: "light2",
        data: [{
          type: 'column',
          dataPoints: data
        }]
      });
      chart2.render();
    }
  </script>
  <%- include( './_top_bar.ejs' ); %>
  <div id="wrap">
    <div id="dashboard">
      <p id="dashboard_title">管理者<span>UID: <%- user_id %></span></p>
      <div id="dashboard_menu">
        <a href="?p=home">
          <p class="<%- dashboard_menu_class[0] %>"><i class="fas fa-table"></i>マイページ</p>
        </a>
        <a href="?p=course">
          <p class="<%- dashboard_menu_class[1] %>"><i class="fas fa-chalkboard-teacher"></i>コース</p>
        </a>
        <a href="?p=edit">
          <p class="<%- dashboard_menu_class[2] %>"><i class="fas fa-edit"></i>編集</p>
        </a>
        <a href="?p=stat">
          <p class="<%- dashboard_menu_class[3] %>"><i class="fas fa-chart-bar"></i>統計</p>
        </a>
        <a href="?p=dev">
          <p class="<%- dashboard_menu_class[4] %>"><i class="fas fa-wrench"></i>開発者向け</p>
        </a>
      </div>
    </div>
    <div id="main">
      <div id="lecture_table">
        <p>講義の出席数比較</p>
        <div id="stage"></div>
        <div id="stage2"></div>
      </div>
    </div>
  </div>
</body>

</html>